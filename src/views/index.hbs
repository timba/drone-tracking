<html>
    <head>
        <link rel="stylesheet" href="/css/mini-default.min.css">
        <link rel="stylesheet" href="/css/app.css">
    </head>
    <body>
        <header class="row">
            <span class="logo">Drones Management</h1>
        </header>
        <div class="row">
            <main class="col-sm-12">
                <div class="card fluid">
                    <h3 class="section">Active Drones ({{drones.length}})</h3>
                    <div class="section">
                        <table class="drones">
                            <thead>            
                                <tr>
                                    <th>ID</th>
                                    <th>Time reported</th>
                                    <th>Lat</th>
                                    <th>Lon</th>
                                    <th>Alt</th>
                                    <th>Velocity (m/s)</th>
                                    <th>Moved (m, last 10s)</th>
                                    <th>Received / Missed</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each drones}}
                                <tr>
                                    <td data-label="ID">{{droneId}}</td>
                                    <td data-label="Time reported">
                                        {{timeReported}}
                                        {{#if noMessage}}
                                            <mark class="secondary">No telemetry since {{sinceLastReported}}s ago</mark>
                                        {{/if}}
                                    </td>
                                    <td data-label="Lat">{{location.latitude}}</td>
                                    <td data-label="Lon">{{location.longitude}}</td>
                                    <td data-label="Alt">{{location.altitude}}</td>
                                    <td data-label="Velocity (m/s)">{{velocity}}</td>
                                    <td data-label="Moved (m, last 10s)">
                                        {{distanceTraveled}}
                                        {{#if isStopped}}
                                            <mark class="secondary" >Stopped</mark>
                                        {{/if}}
                                    </td>
                                    <td data-label="Received / Missed">{{received}} / {{missed}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </body>
</html>